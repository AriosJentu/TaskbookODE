\RequirePackage[russian]{babel}

% Page numbering
\pagestyle{fancy}
\fancyhf{}
\rfoot{\thepage}
\renewcommand{\headrulewidth}{1pt}
\renewcommand{\footrulewidth}{0pt}
\fancyheadoffset{10mm}
\fancyfootoffset{0mm}
\setlength{\headheight}{21pt}

% Table of contents
\dottedcontents{section}[1.7em]{\vspace{2pt} \bfseries}{1.7em}{1pc}
\dottedcontents{subsection}[2.5em]{}{2.5em}{1pc}

\geometry{left=2.5cm}
\geometry{right=1.5cm}
\geometry{top=2cm}
\geometry{bottom=2cm}

% Sections font Classic
\titleformat*{\section}{\normalfont \large \bfseries}
\titleformat*{\subsection}{\normalfont \bfseries \centering}
